package colaborador;

public class Pessoa {

	//Atributos
	private String nomePessoa, enderecoPessoa;
	private int idadePessoa;
	
	//Construtor
	public Pessoa (String nomePessoa, String enderecoPessoa, int idade) {
		this.nomePessoa = nomePessoa;
		this.enderecoPessoa = enderecoPessoa;
		this.idadePessoa = idade;
		
		exibirDadosPessoa();
	}
	
	//Método para exibir dados pessoais
	private void exibirDadosPessoa() {
		System.out.println("Nome: "+nomePessoa);
		System.out.println("Nome: "+enderecoPessoa);
		System.out.println("Nome: "+idadePessoa);
		
	}
}
